<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="configurationService" class="org.renci.opm.config.OPMConfigurationServiceImpl" singleton="true" />

  <bean id="activityDAO" class="org.renci.opm.dao.rs.ActivityDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="documentDAO" class="org.renci.opm.dao.rs.DocumentDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="endDAO" class="org.renci.opm.dao.rs.EndDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="internationalizedStringDAO" class="org.renci.opm.dao.rs.InternationalizedStringDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="locationDAO" class="org.renci.opm.dao.rs.LocationDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="organizationDAO" class="org.renci.opm.dao.rs.OrganizationDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="otherDAO" class="org.renci.opm.dao.rs.OtherDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="personDAO" class="org.renci.opm.dao.rs.PersonDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="primarySourceDAO" class="org.renci.opm.dao.rs.PrimarySourceDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="qualifiedNameDAO" class="org.renci.opm.dao.rs.QualifiedNameDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="quotationDAO" class="org.renci.opm.dao.rs.QuotationDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="revisionDAO" class="org.renci.opm.dao.rs.RevisionDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="roleDAO" class="org.renci.opm.dao.rs.RoleDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="softwareAgentDAO" class="org.renci.opm.dao.rs.SoftwareAgentDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="startDAO" class="org.renci.opm.dao.rs.StartDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="typeDAO" class="org.renci.opm.dao.rs.TypeDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="opmBean" class="org.renci.opm.dao.OPMDAOBean">
    <property name="activityDAO" ref="activityDAO" />
    <property name="documentDAO" ref="documentDAO" />
    <property name="endDAO" ref="endDAO" />
    <property name="internationalizedStringDAO" ref="internationalizedStringDAO" />
    <property name="locationDAO" ref="locationDAO" />
    <property name="organizationDAO" ref="organizationDAO" />
    <property name="otherDAO" ref="otherDAO" />
    <property name="personDAO" ref="personDAO" />
    <property name="primarySourceDAO" ref="primarySourceDAO" />
    <property name="quotationDAO" ref="quotationDAO" />
    <property name="revisionDAO" ref="revisionDAO" />
    <property name="roleDAO" ref="roleDAO" />
    <property name="softwareAgentDAO" ref="softwareAgentDAO" />
    <property name="startDAO" ref="startDAO" />
    <property name="typeDAO" ref="typeDAO" />
  </bean>

</beans>
